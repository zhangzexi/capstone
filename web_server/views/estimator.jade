include mixins
html
  head
    title
    link(rel='stylesheet', href='/bootstrap-3.3.7-dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='/bootstrap-3.3.7-dist/css/bootstrap-theme.min.css')
  body
     nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      .container
        script( src='//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js' )
        script( src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js' )
        // Brand and toggle get grouped for better mobile display
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
            span.sr-only Navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') MyEstimate
        // Collect the nav links, forms, and other content for toggling
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.nav-pills.navbar-right
            li
              a(href='/') Home
            li
              a(href='/about') About
            li
              a(href='/estimator') Estimator
            li.active(role='presentation')
              if logged_in_user
                a(href='/logout') Log out
              else
                a(href='/login') Sign in

            li
                +nav_item_dropdown("#")(label="My")
                    +nav_item("/login" , "active") Login
                    +nav_item("/estimator") Another action
                    +nav_item("/register") register



    div(style='margin-top: 10%')
      img(src='/logo.png', style='display: block; margin-left: auto; margin-right: auto ')
      br
      br
      br
      .container
        form#estimate(method='get', action='/estimation_summary')
          .row
            .col-md-1
            .col-md-10
              .well
                ul.list-group
                  li.list-group-item
                    label Address:
                    input.form-control(type='text', name='address', value='')
                  li.list-group-item
                    label Property Type:
                    select.form-control(name='ptype', form='estimate')
                      option(value='condo') Condo
                      option(value='singlef') Single Family
                      option(value='multif') Multi Family
                      option(value='town') Town House
            .col-md-1
          .row
            .col-md-1
            .col-md-5
              .well
                legend Current
                ul.list-group
                  li.list-group-item
                    label Floor Size:
                    input.form-control(type='number', name='floor_size', value='')
                  li.list-group-item
                    label Lot Size:
                    input.form-control(type='number', name='lot_size', value='')
                  li.list-group-item
